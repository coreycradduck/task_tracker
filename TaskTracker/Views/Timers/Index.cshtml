@model IEnumerable<TaskTracker.Models.TimerTagViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>History</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tag
        </th>
        <th>
            Start Timestamp
        </th>
        <th>
            End Timestamp
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.start_timestamp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.end_timestamp)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TimerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TimerId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TimerId })
        </td>
    </tr>
}

</table>
